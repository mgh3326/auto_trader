<clickhouse>
    <!-- Zookeeper configuration -->
    <zookeeper>
        <node>
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper>

    <!-- Macros for cluster configuration -->
    <macros>
        <cluster>cluster</cluster>
        <shard>01</shard>
        <replica>01</replica>
    </macros>

    <!-- Remote servers configuration for single-node setup -->
    <remote_servers>
        <cluster>
            <shard>
                <replica>
                    <host>clickhouse</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster>
    </remote_servers>
</clickhouse>
